if [ -z "$1" ]; then
  echo "please provide a project"
else
  if [ -d ~/projects/$1 ]; then
    cd ~/projects/$1

  else 
    if [ -n "$HAPI_REPO" ]; then
      echo "Getting $1 from $HAPI_REPO/$1.git"
      cd ~/projects/
      git clone "$HAPI_REPO/$1.git"
      cd $1
    fi
  fi

  # activate environment file, if exists
  if [ -d ~/.venv/$1 ]; then
    . ~/.venv/$1/bin/activate # python virtualenv
  fi
fi

