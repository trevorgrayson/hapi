#!/bin/bash

if [ -z $1 ]; then
  echo "dsky SUBJECT VERB"
  exit 0
fi

if [ $1 == '.' ]; then
    NOUN=`pwd | rev | cut -d'/' -f1 |rev`
else
    NOUN=$1
fi

PROJ_DIR="$PROJECTS/$NOUN"

if [ -d $PROJ_DIR ]; then
  cd /tmp
  mkdir -p dsky
  cd dsky

  if [ -d $NOUN ]; then
    echo 'project cached'
  else 
    git clone $PROJ_DIR
  fi


  cd $PROJ_DIR
  echo $PROJ_DIR
  # TODO need to be able to specify if PROJECT dir, or temp dir
  case "$2" in
  github )
      # open or xdg-open
      open "http://github.com/`cat .git/config | grep url | cut -d: -f2 | cut -d. -f1`"
      ;;
  stat )
      # tc build 
      # github prs
      git diff
      git diff --stat
      echo "pull requests"
      dsky $1 pr
      ;;
  pr )
      hub pr list -s open -L 10 --format="%l%i %au: %t %uI %Nc%n    a:%as  r:%rs  %L%n" # %sC for color
      ;;
  prc )
      hub pr checkout $3
      ;;
  vi )
      vi
      ;;
  commit )
      git add .
      git commit
      ;;
  push )
      git push origin
      ;;
  stash )
      git stash
      ;;
  rebase )
      git pull --rebase origin master
      ;;
  co )
      # hmm
      git checkout $3
      ;;
  branch )
      # hmm
      git branch -a
      ;;
  idea )
      idea $1
      ;;
  run )
      # hmm
      docker run -P $1
      ;;
  * )
      make $3
      ;;
  esac

else 
  # not a local ~/project 
  echo "SUBJECT $NOUN not found."
fi

